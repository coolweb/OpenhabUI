        "../../../scripts/app/directive/SwitchDevice/ISwitchDeviceDirectiveScope.ts",
        "../../../scripts/app/directive/SwitchDevice/SwitchDeviceDirective.ts",
        "../../../scripts/app/directive/SwitchDevice/SwitchDeviceDirectiveController.ts",
        "../../../scripts/app/model/ErrorCodeEnum.ts",
        "../../../scripts/app/model/ProgramError.ts",
        "../../../scripts/tests/business/DeviceManagerTest.ts",
        "../../../scripts/tests/data/OpenhabRepositoryTest.ts",
        "../../../scripts/tests/mocks/data/IOpenhabRepositoryMock.ts",
        "../../../scripts/tests/mocks/OpenhabUIMocks.ts",
        "../../../typings/angular-material/angular-material.d.ts",
        "../../../typings/angularjs/angular-mocks.d.ts",
        "../../../typings/angularjs/angular.d.ts",
        "../../../typings/jasmine/jasmine.d.ts",
        "../../../typings/jquery/jquery.d.ts",
        "../../../typings/tsd.d.ts"
