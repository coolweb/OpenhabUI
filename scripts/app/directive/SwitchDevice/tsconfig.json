        "../../../app/directive/BaseDeviceController.ts",
        "../../../app/directive/IBaseDeviceScope.ts",
        "../../../app/directive/SwitchDevice/ISwitchDeviceDirectiveScope.ts",
        "../../../app/directive/SwitchDevice/SwitchDeviceDirective.ts",
        "../../../app/directive/SwitchDevice/SwitchDeviceDirectiveController.ts",
        "../../../app/directive/TemperatureDevice/ITemperatureDeviceDirectiveScope.ts",
        "../../../app/directive/TemperatureDevice/TemperatureDeviceDirective.ts",
        "../../../app/directive/TemperatureDevice/TemperatureDeviceDirectiveController.ts",
        "../../../app/model/ErrorCodeEnum.ts",
        "../../../app/model/ProgramError.ts",
        "../../../tests/business/DeviceManagerTest.ts",
        "../../../tests/data/OpenhabRepositoryTest.ts",
        "../../../tests/mocks/data/IOpenhabRepositoryMock.ts",
        "../../../tests/mocks/OpenhabUIMocks.ts",
        "../../business/DeviceManager.ts",
        "../../business/interfaces/IDeviceManager.ts",
        "../../../../typings/tsd.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
